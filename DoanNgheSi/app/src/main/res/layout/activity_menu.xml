<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="180dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/icon"
        android:layout_centerHorizontal="true"
        android:layout_height="180dp"
        android:id="@+id/imageView" />
    <com.doannghesi.objects.TextViewDuepuntozero
        android:layout_width="150dp"
        android:text="Chơi ngay"
        android:id="@+id/iv_play"
        android:background="@drawable/selector_menu_bt"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_height="50dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/lucky_spin" />
    <com.doannghesi.objects.TextViewDuepuntozero
        android:layout_width="150dp"
        android:layout_below="@id/iv_play"
        android:id="@+id/lucky_spin"
        android:background="@drawable/selector_menu_bt"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:text="Vòng quay"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp" />
    <com.doannghesi.objects.TextViewDuepuntozero
        android:layout_width="150dp"
        android:text="Thoát"
        android:background="@drawable/selector_menu_bt"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/iv_exit"
        android:layout_marginTop="20dp"
        android:layout_below="@id/lucky_spin"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp" />

</RelativeLayout>